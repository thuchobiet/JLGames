@model CaBlog.Models.THELOAI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section title{
    Thể Loại
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.ngaytao)

        <div class="form-group">
            <label class="control-label col-md-2">Tên thể loại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten)
                @Html.ValidationMessageFor(model => model.ten)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a href="@Url.Action("Index","Theloai")" class="btn btn-info" role="button">Hủy</a>                
            </div>
        </div>
    </div>
}

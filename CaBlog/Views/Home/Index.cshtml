@model CaBlog.Models.CustomModel

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Kho game,Blog">
    <meta name="author" content="JackLu">
    <title>@ViewBag.Title - JackLu's Blog</title>

    @Styles.Render("~/Content/css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body id="page-top">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> JackLu <span class="glyphicon glyphicon-star" aria-hidden="true"></span></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="page-scroll" href="#dayla">Đây là...</a>
                    </li>

                    <li>
                        <a class="page-scroll" href="#games">Kho Game</a>
                    </li>

                    <li>
                        <a class="page-scroll" href="#quehuong">Quê Hương Tôi</a>
                    </li>

                    <li>
                        <a class="page-scroll" href="#lienhe">Liên hệ</a>
                    </li>
                    <li>
                        <a href="/Admin/Index" style="padding-top: 5px;" title="Vào Trang Quản Trị" ><i class="fa fa-eye fa-3x wow bounceIn" data-wow-delay=".5s"></i></a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Page Content -->
    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <p>@Model.lsDanhNgon.First().noidung_en</p>
                <em>@Model.lsDanhNgon.First().noidung_vn</em>
                <hr>
                <h3>@Model.lsDanhNgon.First().tacgia</h3>
            </div>
        </div>
    </header>

    <section class="bg-primary" id="dayla">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Kho game dành cho mọi người</h2>
                    <!--<hr class="light">-->
                    <p class="text-faded">Nếu bạn ưa thích một tựa game, hãy mua nó để giúp đỡ các nhà làm game trong tương lai!</p>
                    <a href="@Url.Action("Index", "GamesList")" class="btn btn-default btn-xl">Down thôi</a>
                </div>
            </div>
        </div>
    </section>

    <section id="games">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a href="@Url.Action("NewGames","GamesList")"><h2 class="section-heading">Game Mới</h2></a>
                    <hr class="primary">
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">

                @foreach (var item in Model.lsGame)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="product-item">
                            <div class="item-thumb">
                                <div class="overlay">
                                    <div class="overlay-inner">
                                        <a href="@Url.Content("~/GamesList/Details/" + @item.id)" class="view-detail">Chi Tiết...</a>
                                    </div>
                                </div> <!-- /.overlay -->
                                <img src="@item.anhcover" alt="@item.ten">
                            </div> <!-- /.item-thumb -->
                            <h3>@item.ten</h3>
                            <p>@item.noidung</p>
                        </div> <!-- /.product-item -->
                    </div> <!-- /.col-md-3 -->
                }

                <div style="float:right;margin-top:15px;">
                    <a href="@Url.Action("Index","GamesList")" class="portfolio-box fancybox" data-fancybox-group="gallery">
                        <h3>Xem Thêm...</h3>
                    </a>
                </div>

            </div>
        </div>

    </section>

    <section class="no-padding" id="quehuong">
        <div class="container-fluid">
            <div class="row no-gutter">

                @foreach (var item in Model.lsQueHuong)
                {

                    <div class="col-lg-4 col-sm-6">
                        <a href="@item.anh" class="portfolio-box fancybox" data-fancybox-group="gallery">
                            <img src="@item.anh" class="img-responsive" alt="">
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        @item.ten
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </section>

    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <h2>Cảnh đẹp quê hương!</h2>
                <a href="@Url.Action("QueHuong","Home")" class="btn btn-default btn-xl wow tada">Xem!</a>
            </div>
        </div>
    </aside>

    <section id="lienhe">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Liên hệ</h2>
                    <p>Mọi đóng góp ý kiến cho website, vui lòng liên hệ theo địa chỉ bên dưới</p>
                </div>
                <div class="col-lg-4 col-lg-offset-2 text-center">
                    <i class="fa fa-twitter fa-3x wow bounceIn"></i>
                    <p><a href="https://twitter.com/dangkychua" class="twitter-follow-button" data-show-count="false">Follow #dangkychua</a></p>
                </div>

                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".5s"></i>
                    <p><a href="mailto:dangkychua@gmail.com">dangkychua@gmail.com</a></p>
                </div>
            </div>
        </div>
    </section>

    <a href="#" class="jacklu-top">↑</a>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        jQuery(document).ready(function ($) {
            var offset = 220;
            var duration = 500;
            jQuery(window).scroll(function () {
                if (jQuery(this).scrollTop() > offset) {
                    jQuery('.jacklu-top').fadeIn(duration);
                } else {
                    jQuery('.jacklu-top').fadeOut(duration);
                }
            });

            $(".fancybox").fancybox();
            $(document).tooltip();
            jQuery('.jacklu-top').click(function (event) {
                event.preventDefault();
                jQuery('html, body').animate({ scrollTop: 0 }, duration);
                return false;
            })
        });

    </script>

</body>
</html>

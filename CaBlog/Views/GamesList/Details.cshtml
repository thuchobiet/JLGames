@model CaBlog.Models.GAME
@{
    ViewBag.Title = "Chi Tiết";
}

@section style{
    <style>
        #page-top > header {
            min-height: 300px;
        }

        #games {
            color: #34383d;
        }
    </style>
}

@section header{
    <h3>Kho Games</h3>
}

